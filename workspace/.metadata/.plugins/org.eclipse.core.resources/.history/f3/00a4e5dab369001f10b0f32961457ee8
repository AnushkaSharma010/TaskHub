package com.project_task_hub.service;

import java.util.List;

import com.project_task_hub.entity.Comments;

public interface CommentService {

	Comments createComment(Long issueId, Long userId, String content) throws Exception;
	Comments deleteComment(Long commentId, Long userId) throws Exception;
	List<Comments> findAllCommentsByIssueId(Long issueId) throws Exception;
}
